@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @* <title>@Title - Gadget Gourmet</title> *@
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/Identity.styles.css" rel="stylesheet" />

</head>
<body>

    <header style="font-family: Noah">

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3 bg-body-tertiary">
            <div class="container-fluid">

                <NavLink class="navbar-brand justify-content-md-start order-md-1 order-2" href="/" style="font-weight: 700">
                    GADGET GOURMET
                </NavLink>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-md-center order-md-2 order-1" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <NavLink class="nav-link px-2 text-dark" href="/">Home</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link text-dark" href="/store">Shop</NavLink>
                        </li>
                        <li class="nav-item">
                            <LoginDisplay />
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link text-dark" href="/history">History</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link text-dark" href="/return">Return</NavLink>
                        </li>
                    </ul>
                </div>

                <ul class="navbar-nav me-5 order-md-3 order-3">
                    <li class="nav-item">

                        <!-- Search bar -->
                        <div class="d-flex justify-content-center mx-auto mt-3">
                            <EditForm Model="searchModel" OnValidSubmit="HandleSearch">
                                <div class="input-group" style="height: 35px;">
                                    <InputText @bind-Value="searchModel.SearchString" type="text" id="searchInput" class="form-control" placeholder="Search for a Product..." style="width: 250px; border-radius: 25px 0 0 25px; height: 35px;" />
                                    <button type="submit" class="input-group-text search-icon" style="border-radius: 0 25px 25px 0; height: 35px;">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                                <!-- You can handle search results with Blazor components or JavaScript interop -->
                            </EditForm>
                        </div>

                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/cart">
                            <img src="~/images/icons/cart-header-icon.svg" alt="Cart" width="24" height="24" />
                        </NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link" href="/users/profile">
                            <img src="~/images/icons/account-header-icon.svg" alt="User Account" width="24" height="24" />
                        </NavLink>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @Body
        </main>
    </div>

    <!-- Footer -->
    <div class="container" style="font-family:Noah">
        <div class="row" style="min-height: 200px">

            <div class="col-md-4">
                <span class="fw-bold fs-2">Gadget Gourmet</span>
                <p class="fs-6">
                    Gadget Gourmet is a cutting-edge e-commerce platform dedicated to offering a curated selection of innovative
                    and modern kitchen gadgets.
                </p>
            </div>

            <div class="col-md-2"></div>

            <div class="col-md-2">
                <span class="fw-bold fs-5">My Account</span>
                <div class="list-group fs-6">
                    <NavLink href="/orders" class="list-group-item list-group-item-light" style="border:none">Orders</NavLink>
                    <NavLink href="/wishlist" class="list-group-item list-group-item-light" style="border:none">WishList</NavLink>
                    <NavLink href="/users/signup" class="list-group-item list-group-item-light" style="border:none">Register</NavLink>
                    <NavLink href="/users/login" class="list-group-item list-group-item-light" style="border:none">Login</NavLink>
                </div>
            </div>

            <div class="col-md-2">
                <span class="fw-bold fs-5">Customer Care</span>
                <NavLink href="/faqs" class="list-group-item list-group-item-light" style="border:none">FAQs</NavLink>
                <NavLink href="/how-to-return" class="list-group-item list-group-item-light" style="border:none">How to Return?</NavLink>
                <NavLink href="/return-policy" class="list-group-item list-group-item-light" style="border:none">Return Policy</NavLink>
                <NavLink href="/terms-conditions" class="list-group-item list-group-item-light" style="border:none">Terms and Conditions</NavLink>
            </div>

            <div class="col-md-2">
                <span class="fw-bold fs-5">Contact Us</span> <br />
                <span class="fs-md-5 fs-sm-6">+92-321-7880049</span><br />
                <span class="fs-6">DHA Sector XX</span>
                <span class="fs-6">Lahore</span>
            </div>
        </div>
    </div>
    <br />
    <footer class="footer text-muted">
        <div class="container-fluid">
            <div class="row">
                <!-- Copyright -->
                <div class="col-md-8 fs-md-6 p-3 order-md-1 order-3" style="font-size: 10px">
                    &copy; 2024 - Gadget_Gourmet. All Rights Reserved
                </div>

                @* <!-- Social Media Icons --> *@
                @* <div class="col-md-4 d-flex align-self-sm-center align-self-md-center order-md-2 justify-content-md-center"> *@
                @*     <a href="https://www.facebook.com" target="_blank"> *@
                @*         <img src="~/Images/icons/fb.jpg" alt="Facebook" width="30" height="24" class="d-inline-block" /> *@
                @*     </a> *@

                @*     <a href="https://www.tiktok.com" target="_blank"> *@
                @*         <img src="~/Images/icons/tiktok.png" alt="TikTok" width="30" height="24" class="d-inline-block" /> *@
                @*     </a> *@

                @*     <a href="https://www.instagram.com" target="_blank"> *@
                @*         <img src="~/Images/icons/instagram.png" alt="Instagram" width="30" height="24" class="d-inline-block" /> *@
                @*     </a> *@
                @* </div> *@

                <!-- Footer Payment Methods -->
                <div class="col-md-4 align-self-center justify-content-md-end order-md-3" style="font-size: 10px; font-family: Noah;">
                    <div class="row mt-md-0 mt-sm-2 align-items-sm-center align-items-md-end">
                        <div class="col-md-6 fs-md-6">
                            Payment Methods
                        </div>

                        <div class="col-sm-1 col-md-1">
                            <a href="#">
                                <img src="~/images/icons/payment-method-footer.png" alt="Payment Method" width="30" height="24" class="d-inline-block" />
                            </a>
                        </div>

                        <div class="col-sm-1 col-md-1">
                            <a href="#">
                                <img src="~/images/icons/paypal_footer_icon.png" alt="PayPal" width="30" height="24" class="d-inline-block" />
                            </a>
                        </div>

                        <div class="col-sm-1 col-md-1">
                            <a href="#">
                                <img src="~/images/icons/cash-footer-icon.png" alt="Cash" width="30" height="24" class="d-inline-block" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- References -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @* Blazor handles scripts differently. If you have Blazor-specific scripts, include them in the appropriate components *@
    @* @RenderSection("Scripts", required: false) *@
</body>
</html>

