<style>

    /* Search Bar */
    .input-group {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-control {
        padding: 8px 12px;
        border: 1px solid #ddd;
        border-radius: 30px;
    }

    .search-icon {
        background-color: #3381f6;
        color: white;
        border: none;
        padding: 8px 12px;
        cursor: pointer;
