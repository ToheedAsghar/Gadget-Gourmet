@page
@model YourNamespace.Pages.Admin.AddProductModel
@{
    ViewData["Title"] = "Add Product";
}

<span class="display-1 mt-2 ps-md-2 fw-bold text-uppercase" style="font-family: Noah; font-size:170%;">
    Add Product
</span>

<form class="mt-3" method="post">
    <!-- Validation Summary -->
    <div asp-validation-summary="All" class="text-danger"></div>

    @* Product Name *@
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-5 col-12">
                <label asp-for="Product.Name" class="form-label">Product Name</label>
                <input type="text" class="form-control" asp-for="Product.Name" id="Name">
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
        </div>
    </div>

    @* Product Description *@
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-5 col-12">
                <label asp-for="Product.Description" class="form-label">Product Description</label>
                <textarea class="form-control" asp-for="Product.Description" id="Description"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
        </div>
    </div>

    @* Product Weight *@
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-5 col-12">
                <label asp-for="Product.Weight" class="form-label">Product Weight (in Grams)</label>
                <input type="number" class="form-control" asp-for="Product.Weight" id="Weight">
                <span asp-validation-for="Product.Weight" class="text-danger"></span>
            </div>
        </div>
    </div>

    @* Product Price *@
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-5 col-12">
                <label asp-for="Product.Price" class="form-label">Price</label>
                <input type="number" step="0.01" class="form-control" asp-for="Product.Price" id="Price">
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
        </div>
    </div>

    @* Product Color *@
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-5 col-12">
                <label asp-for="Product.Color" class="form-label">Color</label>
                <input type="text" class="form-control" asp-for="Product.Color" id="Color">
                <span asp-validation-for="Product.Color" class="text-danger"></span>
            </div>
        </div>
    </div>

    @* Product Manufacturer *@
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-5 col-12">
                <label asp-for="Product.Manufacturer" class="form-label">Product Manufacturer</label>
                <input type="text" class="form-control" asp-for="Product.Manufacturer" id="Manufacturer">
                <span asp-validation-for="Product.Manufacturer" class="text-danger"></span>
            </div>
        </div>
    </div>

    @* Product Category *@
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-5 col-12">
                <label asp-for="Product.Category" class="form-label">Product Category</label>
                <input type="text" class="form-control" asp-for="Product.Category" id="Category">
                <span asp-validation-for="Product.Category" class="text-danger"></span>
            </div>
        </div>
    </div>

    @* Product Quantity *@
    <div class="container mb-3">
        <div class="row">
            <div class="col-md-5 col-12">
                <label asp-for="Product.Quantity" class="form-label">Product Quantity</label>
                <input type="number" class="form-control" asp-for="Product.Quantity" id="Quantity">
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
        </div>
    </div>

    @* Submit Button *@
    <button type="submit" class="btn btn-primary text-center">Submit</button>
</form>

<!-- Return Link -->
<div class="container-fluid mt-5" style="font-family: Noah">
    <div class="row">
        <a class="nav-link text-dark" asp-page="/Admin/Index">Return to Admin Panel</a>
    </div>
</div>

<!-- Client-Side Validation Scripts -->
@section Scripts {
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
